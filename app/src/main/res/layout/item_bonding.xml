<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mcv_item_bonding"
    style="@style/CardViewTransContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_item_bonding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_item_bonding_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcv_item_bonding_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:elevation="0dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintDimensionRatio="16:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <FrameLayout
                    android:id="@+id/fl_item_bonding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:elevation="0dp">

                    <ImageView
                        android:id="@+id/iv_item_bonding_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/desc_highlighted_destination"
                        android:scaleType="centerCrop"
                        tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    <ImageButton
                        android:id="@+id/btn_bonding_navigate"
                        style="@style/ImageButtonRoundNoText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|end"
                        android:layout_margin="24dp"
                        android:contentDescription="@string/desc_navigate"
                        android:src="@drawable/ic_baseline_navigation_24" />

                </FrameLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_item_service_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mcv_item_bonding_img">

                <LinearLayout
                    android:id="@+id/ll_item_service_info"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ll_container_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_item_tplan_time"
                        style="@style/TextViewCardLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_date"
                        android:textStyle="bold"
                        tools:text="@string/dummy_date_range" />

                    <TextView
                        android:id="@+id/tv_item_tplan_title"
                        style="@style/TextViewCardTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="@string/dummy_bonding_title"
                        tools:text="@string/dummy_bonding_title" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_container_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_thumb_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-16dp"
                        app:cardCornerRadius="64dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white_trans_LV2"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:id="@+id/iv_thumb_1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/desc_destination_thumbnail"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_thumb_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-16dp"
                        app:cardCornerRadius="64dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white_trans_LV2"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:id="@+id/iv_thumb_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/desc_destination_thumbnail"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/mcv_thumb_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="64dp"
                        app:cardElevation="0dp"
                        app:strokeColor="@color/white_trans_LV2"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:id="@+id/iv_thumb_3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/desc_destination_thumbnail"
                            android:scaleType="centerCrop"
                            tools:srcCompat="@tools:sample/backgrounds/scenic" />

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/ll_item_tplan_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_trans_LV2"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_item_bonding_body">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_item_bonding_join"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/label_join"
                app:icon="@drawable/ic_baseline_group_add_24"
                app:iconGravity="textStart"
                tools:layout_weight="0.5" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_item_bonding_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="@string/label_more"
                app:icon="@drawable/ic_baseline_info_24"
                app:iconGravity="textStart"
                tools:layout_weight="0.5" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>