<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TravisAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow_F7D44C</item>
        <item name="colorPrimaryVariant">@color/black_121212</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_121212</item>
        <item name="colorSecondaryVariant">@color/black_121212</item>
        <item name="colorOnSecondary">@color/black_1B1C1E</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="CardViewLabelBox" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white_trans_40</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPaddingLeft">8dp</item>
        <item name="contentPaddingRight">8dp</item>
        <item name="contentPaddingTop">6dp</item>
        <item name="contentPaddingBottom">6dp</item>
    </style>

    <style name="CardViewTransContainer" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white_trans_20</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
    </style>

</resources>